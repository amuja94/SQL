--Display a table showing artists name's with their songs

SELECT songs.title, artists.full_name
FROM artists
JOIN songs

ON artists.id = songs.artist_id;

--Display a table showing artists name's with their birth year and place of birth

SELECT artists.full_name, artists.birth_year, artists.birth_city
FROM artists;
