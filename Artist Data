CREATE TABLE artists (id INTEGER PRIMARY KEY AUTOINCREMENT,
    full_name TEXT,
    birth_year INTEGER,
    birth_city TEXT);
    
INSERT INTO artists (full_name, birth_year, birth_city) VALUES ("Michael Jackson", 1958, "Gary");
INSERT INTO artists (full_name, birth_year, birth_city) VALUES ("Prince", 1958, "Minneapolis");
INSERT INTO artists (full_name, birth_year, birth_city) VALUES ("Madonna", 1958, "Bay City");
INSERT INTO artists (full_name, birth_year, birth_city) VALUES ("Sade", 1959, "Ibadan");
INSERT INTO artists (full_name, birth_year, birth_city) VALUES ("Tina Turner", 1939, "Brownsville");
INSERT INTO artists (full_name, birth_year, birth_city) VALUES ("David Bowie", 1947, "London");

CREATE TABLE songs (id INTEGER PRIMARY KEY AUTOINCREMENT,
    artist_id INTEGER,
    title TEXT,
    release_year INTEGER);
    
